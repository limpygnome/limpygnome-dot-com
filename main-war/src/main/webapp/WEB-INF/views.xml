<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition
            name="layout"
            template="/WEB-INF/views/layout/main.jsp"
    >
        <put-attribute name="pageContent" value="No content defined, error?" />

        <!-- Header includes for third-party libs -->
        <put-list-attribute name="headerIncludes">
        </put-list-attribute>

        <!-- Page content includes for inserting content at the end of the page content/main region -->
        <put-list-attribute name="pageContentIncludes">
        </put-list-attribute>
    </definition>

    <!-- Pages (general setup) -->
    <definition name="pages/**" extends="layout">
        <put-attribute name="pageContent" value="/WEB-INF/views/pages/{1}.jsp" />
    </definition>

</tiles-definitions>
