{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "S3 bucket, with Cloud Front at the front as CDN, using Route 53 pointing to Cloud Front.",
    "Parameters" : {
        "DomainName" : {
            "Type" : "String",
            "Description" : "Auxiliary domain used as mirror.",
            "AllowedPattern" : "(?!-)[a-zA-Z0-9-.]{1,63}(?<!-)",
            "ConstraintDescription" : "must be a valid DNS zone name."
        },
        "RedirectUrl" : {
            "Type" : "String",
            "Description" : "Auxiliary domain used as mirror.",
            "AllowedPattern" : "(?!-)[a-zA-Z0-9-.]{1,63}(?<!-)",
            "ConstraintDescription" : "must be a valid DNS zone name."
        }
    },
    "Mappings" : {
        "RegionMap" : {
            "eu-west-1" : { "S3hostedzoneID" : "Z1BKCTXD74EZPE", "websiteendpoint" : "s3-website-eu-west-1.amazonaws.com" }
        }
    },
    "Resources" : {

        "RedirectBucket" : {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": { "Ref" : "DomainName" },
                "AccessControl": "BucketOwnerFullControl",
                "WebsiteConfiguration": {
                    "RedirectAllRequestsTo": {
                        "HostName": {"Ref": "DomainName"}
                    }
                }
            }
        },
        "WWWRedirectBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Join": [".", ["www", {"Ref":"DomainName"}]]
                },
                "AccessControl": "BucketOwnerFullControl",
                "WebsiteConfiguration": {
                    "RedirectAllRequestsTo": {
                        "HostName": {"Ref": "RedirectUrl"}
                    }
                }
            }
        },

        "WebsiteDNSName" : {
            "Type" : "AWS::Route53::RecordSetGroup",
            "Properties" : {
                "HostedZoneName" : { "Fn::Join" : [ "", [{ "Ref" : "DomainName" }, "."]]},
                "RecordSets" : [

                    {
                        "Name" : { "Ref" : "DomainName" },
                        "Type" : "A",
                        "AliasTarget" : {
                            "HostedZoneId": "Z1BKCTXD74EZPE",
                            "DNSName": { "Fn::Join" : [".", [
                                {"Ref" : "DomainName"},
                                {"Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "websiteendpoint"]}
                            ]]
                            }
                        }
                    },
                    {
                        "Name": {
                            "Fn::Join": ["", ["www.", {"Ref":"DomainName"}]]
                        },
                        "Type": "CNAME",
                        "TTL" : "900",
                        "ResourceRecords" : [
                            { "Fn::Join" : [".", [
                                "www", {"Ref" : "DomainName"},
                                {"Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "websiteendpoint"]}
                            ]]
                            }
                        ]
                    }

                ]
            }
        }

    },
    "Outputs" : {
    }
}
