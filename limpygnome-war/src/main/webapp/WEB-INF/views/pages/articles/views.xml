<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <!-- Article layout -->
    <definition name="articles_layout" extends="layout">
        <put-attribute name="pageContent" value="/WEB-INF/views/pages/articles/layout.jsp" />
    </definition>

    <!-- Article pages -->
    <definition name="articles/**" extends="articles_layout">
        <put-attribute name="articleContent" value="/WEB-INF/views/pages/articles/{1}.jsp" cascade="true" />
    </definition>

    <!-- Pages with includes -->
    <definition name="articles/hacking_nandos_pong_game" extends="articles_layout">
        <put-attribute name="articleContent" value="/WEB-INF/views/pages/articles/hacking_nandos_pong_game.jsp" cascade="true" />
        <put-list-attribute name="headerIncludes">
            <add-attribute value="/WEB-INF/views/layout/includes/syntaxhighlighter.jsp" />
        </put-list-attribute>
        <put-list-attribute name="pageContentIncludes">
            <add-attribute value="/WEB-INF/views/layout/includes/syntaxhighlighter_content.jsp" />
        </put-list-attribute>
    </definition>


</tiles-definitions>
