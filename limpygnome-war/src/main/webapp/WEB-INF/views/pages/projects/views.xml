<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <!-- Project layout -->
    <definition name="projects_layout" extends="layout">
        <put-attribute name="pageContent" value="/WEB-INF/views/pages/projects/layout.jsp" />
    </definition>

    <!-- Project pages -->
    <definition name="projects/**" extends="projects_layout">
        <put-attribute name="projectContent" value="/WEB-INF/views/pages/projects/{1}.jsp" cascade="true" />
    </definition>

    <!-- Project documents -->
    <definition name="projects/binary-clock" extends="projects_layout">
        <put-attribute name="projectContent" value="/WEB-INF/views/pages/projects/binary-clock.jsp" cascade="true" />
        <put-list-attribute name="headerIncludes">
            <add-attribute value="/WEB-INF/views/layout/includes/mathjax.jsp" />
            <add-attribute value="/WEB-INF/views/layout/includes/syntaxhighlighter.jsp" />
        </put-list-attribute>
        <put-list-attribute name="pageContentIncludes">
            <add-attribute value="/WEB-INF/views/layout/includes/syntaxhighlighter_content.jsp" />
        </put-list-attribute>
    </definition>

</tiles-definitions>
